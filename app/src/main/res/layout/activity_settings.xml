<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jurtz.android.pefectegg.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutWeight">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gewicht in Gramm:"
            android:id="@+id/lblWeight"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtWeight"
            android:layout_alignBottom="@+id/textView"
            android:layout_toEndOf="@+id/textView"
            android:textAlignment="center"
            android:hint="60" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatur"
        android:id="@+id/lblTemperature"
        android:layout_below="@+id/linearLayoutWeight"
        android:layout_alignParentStart="true" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblTemperature"
        android:layout_alignParentEnd="true"
        android:id="@+id/rgTemperature">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raum (21°C)"
            android:id="@+id/rbTemperatureRoom" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kühlschrank (4°C)"
            android:id="@+id/rbTemperatureFridge"
            android:checked="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayoutTemperature">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Andere (in °C):"
                android:id="@+id/rbTemperatureOther" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rgTemperature"
                android:layout_alignParentEnd="true"
                android:id="@+id/txtTemperature"
                android:textAlignment="center"
                android:hint="15" />
        </LinearLayout>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gewünschte Konsistenz"
        android:id="@+id/lblConsistency"
        android:layout_below="@+id/rgTemperature"
        android:layout_alignParentStart="true"
        android:paddingTop="10sp"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblConsistency"
        android:layout_alignParentEnd="true"
        android:id="@+id/rgConsistency">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sehr weich"
            android:id="@+id/rbConsistencySoft" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wachsweich"
            android:id="@+id/rbConsistencyMedium"
            android:checked="true" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="eher hart"
            android:id="@+id/rbConsistencyHard" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutHeight"
        android:layout_below="@+id/rgConsistency">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Höhe über NN in Meter:"
            android:id="@+id/lblHeightAboveSea"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtHeightAboveSea"
            android:hint="300"
            android:textAlignment="center" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berechnen"
        android:id="@+id/cmdCalculateTime"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
